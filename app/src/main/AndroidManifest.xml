<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nodomain.sabdevs.expensesmonitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.exsmanager.ExsManagerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.addcategory.EditCategoriesActivity"
            android:label="@string/title_activity_edit_categories"
            android:parentActivityName=".activities.exsmanager.ExsManagerActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.exsmanager.ExsManagerActivity" />
        </activity>
        <activity
            android:name=".activities.history.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".activities.exsmanager.ExsManagerActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.exsmanager.ExsManagerActivity" />
        </activity>
        <activity
            android:name=".activities.about.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".activities.exsmanager.ExsManagerActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.exsmanager.ExsManagerActivity" />
        </activity>

    </application>

</manifest>